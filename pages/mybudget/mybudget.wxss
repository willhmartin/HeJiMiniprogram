.background { 
  width: 100%;
  height: 100vh;
  background-color: white;
  align-items: center; 
  margin-bottom: 0;
  padding-top: 30px;
  border-radius: 20px;
}
.container {
  justify-content: center;
  /* padding-top: 40px; */
  margin-bottom: 20px;
  /* padding-bottom: 10px; */
  padding: 0;
}
.header-image {
  background-size: cover;
  background-position: center;
  height: 200px;
  display: flex-inline;
  justify-content: center;
  align-items: center;
  margin: 0;
}
#banner-title {
  color: white;
  font-size: 30px;
  font-weight: bold;
  padding-top: 100px;
  padding-left: 10px;
}
.header {
  color: black;
  padding: 5px 30px;
  border-radius: 50px;
  font-weight: bolder;
  text-align: center;
  font-size: 40px;
}
.budget-btn {
  color: black;
  text-align: center;
}
.avatar-large {
  width: 100px;
  height: 100px;
  display: block;
  margin: 20px auto 0px auto;
  border-radius: 50%;
  text-align: center;
  box-shadow: 0 0 15px rgba(0,0,0,0.8);
  margin-bottom: 20px;
}
.title {
  font-size: 25px;
  font-weight: bold;
  padding-top: 6px;
  text-align: center;
  color: white;
}
.total-budget {
  color:black;
  padding: 20px 20px;
  font-weight: light;
  text-align: center;
  margin: 0 15px 0 15px;
}
.title {
  font-size: 40px;
  color: black;
}
.payment-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-grow: 1;
  height: 80vh;
  flex-direction: column;
  /* margin: 15px; */
  margin-top: 0;
  border-color: white;
  /* background: #228CDB; */
}
.transactions {
  padding-bottom: 8px;
  margin-top: 50px;
  color: black;
  font-size: 20px;
  text-align: center;
  font-weight: bold;
  font-size: 25px;
}
.hour-div {
  display: flex;
  justify-content: space-between;
}
.all-the-btn{
  display:flex;
  justify-content: space-around;
}
#btn-create {
  border-radius: 50%;
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50px;
  margin: 0 auto;
  background: #ED6A5A;
  margin-bottom: 40px;
}
.plus {
  padding-bottom: 3px;
}
.submit-payment {
  text-align: center;
  color: white;
  font-size: 20px;
  margin-bottom: 10px;
}
.plus {
  height: 74px;
  color: white;
}
.card-product {
  overflow: hidden;
  height: 120px;
  max-width: 100%;
  background: white;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
  border-radius: 10px;
}
.card-image {
  height: 100%;
  width: 300rpx;
  flex-shrink: 0;
  flex-grow: 0;
  /* object-fit: cover; */
}
.card-product .card-product-infos {
  width: 100%;
  padding: 16px;
  text-align: center; 
}
.card-overview {
  display: absolute;
  padding: 0, 5px;
  margin: 4px, 4px;
 }