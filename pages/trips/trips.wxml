<view class="card-grid">
  <view class="form">

   <view class="section">
    <view class="section__title">Amount
      <input type="number" bindinput="bindAmountInput" placeholder="Enter Amount Here"/>
    </view>
  </view>

  <view class="section">
    <view class="section__title">Split By Group?
      <radio-group class="radio-group" bindchange="radioChange">
       <label class="radio" wx:for="{{items}}">
        <radio value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
        </label>
      </radio-group>
    </view>
  </view>

  <view class="section">
    <view class="section__title">Category
      <input  bindinput="bindCatInput" placeholder="Enter Category Here"/>
    </view>
  </view>

  <view class="section">
    <view class="section__title">Note
      <input  bindinput="bindNoteInput" placeholder="Note (Optional)"/>
    </view>
  </view>

  <view class="section">
    <view class="section__title">
      <picker mode="date" value="{{date}}" start="2020-12-01" end="2025-12-01" bindchange="setDate">
        <view class="picker">
            Date  {{date}} 
        </view>
      </picker>
    </view>
  </view>

    <view class="btn-area">
      <button id="sub" class="btn-submit" bindtap="submit">Submit</button>
      <!-- <button id="reset" class="btn-reset" bindtap="reset">Reset</button> -->
    </view> 
    </view>
  </view>
