.container {
  padding: 70rpx 0;
  height: 100vh;
  background-color: #3B7EC9;
  position: relative;
}

.holiday-card {
  color: black;
  font-size: 30rpx;
  padding: 10rpx 10rpx;
  border-radius: 5px;
  width: 80vw;
  padding: 20rpx 20rpx;
  width: 300px;
  box-shadow: 7px 5px 16px 6px rgba(25,92,130,0.25);
  background-color: #f4f4f4;

}

.title {
  font-family: 'Nunito Sans', sans-serif;
  color: white;
  font-size: 50px;
  font-weight: bold;
  font-style: italic;
}

#btn-create {
  border-radius: 50%;
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50px;
  margin: 0 auto;
  background: #ff4b5c;
  /*height: 74px;*/
  font-family:'Nunito Sans', sans-serif;
  color: white;
}