.header-image {
  background-size: cover;
  background-position: center;
  height: 200px;
  display: flex-inline;
  justify-content: center;
  align-items: center;
  margin: 0;
}

#banner-title {
  color: white;
  font-size: 30px;
  font-weight: bold;
  padding-top: 100px;
  padding-left: 10px;
  /* position: absolute;
  bottom: 8px;
  left: 16px; */
}

.card-title {
  margin-bottom: 16rpx;
}

.background {
  width: 100%;
  height: 100vh;
  background-color: white;
  align-items: center; 
  margin-bottom: 0;
  padding-top: 30px;
  border-radius: 20px;
}

.section {
  width: 350px;
  /* max-width: 100%; */
  height: 60rpx;
  opacity: 0.9;
  box-shadow: 7px 5px 16px 6px rgba(25,92,130,0.25);  
  background-color: #ffffff;
  text-align: center;
  font-weight: bold;
  border-radius: 10px;
  padding: 20px 5px;
  padding-bottom: 50px;
  margin-bottom: 20px;
}
.form {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-grow: 1;
  flex-direction: column;
  margin-top: 0;
  border-color: white;
  /* background: #228CDB; */
}

#sub {
  color: white;
  background-color: #ED6A5A;
  /* background-color: #297DFA; */
  margin-top: 15px;
}

.user-input {
  background-color: #eeeeee;
  border-radius: 5px;
  margin-bottom: 10px;
  margin-right: 20px;
  margin-left: 20px;
  font-weight: lighter;
  font-size: 15px;
  color: #393e46;
}

.btn-submit {
  margin-bottom: 40rpx;
}
