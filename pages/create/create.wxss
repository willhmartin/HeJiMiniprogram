/* body */
.background {
  width: 100%;
  height: 100vh;
  background-color: white;
  align-items: center; 
  margin-bottom: 0;
  padding-top: 30px;
  border-radius: 20px;
}
.form {
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-grow: 1;
  height: 80vh;
  flex-direction: column;
  /* margin: 15px; */
  margin-top: 0;
  border-color: white;
  /* background: #228CDB; */
}

.card-title {
  margin-bottom: 10px;
}

.user-input {
  background-color: #eeeeee;
  border-radius: 5px;
  margin-bottom: 10px;
  margin-right: 20px;
  margin-left: 20px;
  font-weight: lighter;
  font-size: 15px;
  color: #393e46;
}
.section {
  width: 300px;
  /* max-width: 100%; */
  height: 60rpx;
  opacity: 0.9;
  box-shadow: 7px 5px 16px 6px rgba(25,92,130,0.25);  
  background-color: #ffffff;
  text-align: center;
  font-weight: bold;
  border-radius: 10px;
  padding: 20px 5px;
  padding-bottom: 50px;
}

